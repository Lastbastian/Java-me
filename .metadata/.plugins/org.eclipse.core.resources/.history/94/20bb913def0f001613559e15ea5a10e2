
public class NumberGuesser {
	
	protected int high;
	protected int low;
	
	private int originalHigh;
	private int originalLow;
	
	private int previousGuess = 50;
	
	public NumberGuesser(int l, int h) {
		low = originalLow = l;
		high = originalHigh = h;
	}
	
	public int getCurrentGuess() {	
		return (high + low) / 2;
	}
	
	public void higher() {
		if (getCurrentGuess() == previousGuess)
		{
			throw new IllegalStateException("The only number left is " + previousGuess + "!");
		}
		
		low = getCurrentGuess() + 1;
		previousGuess = low;
	}
	
	public void lower() {
		if (getCurrentGuess() == previousGuess)
		{
			throw new IllegalStateException("The only number left is " + previousGuess + "!");
		}
			
		high = getCurrentGuess() - 1;
		previousGuess = high;
	}
	
	public void reset() {
		low = originalLow;
		high = originalHigh;
	}
}