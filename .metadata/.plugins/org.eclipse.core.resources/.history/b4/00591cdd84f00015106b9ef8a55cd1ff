
public class BARTTrain {
	
	private String nextStation;
	private double milesPerHour;
	private double milesToNextStation;
	private boolean inbound;
	
	public BARTTrain() 
	{
		nextStation = "";
		milesPerHour = 0;
		milesToNextStation = 0;
		inbound = true;
	}
	
	public BARTTrain(String station, double mph, double miles, boolean isInbound) 
	{
		nextStation = station;
		milesPerHour = mph;
		milesToNextStation = miles;
		inbound = isInbound;
	}
	
	public void setNextStation(String s)
	{
		nextStation = s;
	}
	
	public String getNextStation() 
	{
		return nextStation;
	}
//	The getMinutesToNextStation method should calculate the time to the next station based on the distance and speed. 
	public double getMinutesToNextStation() 
	{
		return milesToNextStation * milesPerHour;
	}
//	The switchInbound method should reverse the "inbound" variable. From true to false, or from false to true.
	public void switchInbound()
	{
		if (inbound)  
			inbound = false;
		else
			inbound = true;
	}
	
	
	

}
