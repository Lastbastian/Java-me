import java.util.Scanner;

public class NumberGuessingGame {
	public static void main(String[] args)
	{
		do {
		playOneGame();
		} while (shouldPlayAgain());
	}
	
	public static void playOneGame()
	{
		Scanner input = new Scanner(System.in);
		int number;
		boolean correct = false;
		
		System.out.println("********** Welcome to the guessing game! **********");
		System.out.println("Guess a number between 1 and 100. ");
		number = input.nextInt();
		
		int lowEnd = 1;
		int highEnd = 100;
		int nextGuess;
		
		do {
			nextGuess = getMidpoint(lowEnd, highEnd);
			
			if (getUserResponseToGuess(nextGuess) == 'h')
			{
				lowEnd = nextGuess;
				System.out.println("HE = " + highEnd + "and LE = " + lowEnd);
			}
			else if (getUserResponseToGuess(nextGuess) == 'l')
			{
				highEnd = nextGuess;
				System.out.println("HE = " + highEnd + "and LE = " + lowEnd);
			}
			else
				correct = true;
		} while (!correct);
	}
	
	public static char getUserResponseToGuess(int guess)
	{
		Scanner input = new Scanner(System.in);
		char guessResponse;
		
		System.out.println("Is it " + guess + "?  (h/l/c)");
		guessResponse = input.next().charAt(0);
		
		return guessResponse;
	}
	
	public static int getMidpoint(int myLowEnd, int myHighEnd)
	{
		int midpoint = (myLowEnd + myHighEnd) / 2;
		
		return midpoint;		
	}
	
	public static boolean shouldPlayAgain()
	{
		
		Scanner input = new Scanner(System.in);
		char response;
		boolean result;
		
		System.out.println("Would you like to play again? (y/n)");
		response = input.next().charAt(0);
		
		if (response == 'y')
			result = true;
		else
			result = false;
		
		return result;
	}
	
}

