
public class NumberGuesser {
	
	protected int high;
	protected int low;
	
	private int originalHigh;
	private int originalLow;
	
	private int previousGuess;
	
	public NumberGuesser(int l, int h) {
		low = originalLow = l;
		high = originalHigh = h;
	}
	
	public int getCurrentGuess() {	
		lastGuess = (high + low) / 2;
		return lastGuess = (high + low) / 2;
	}
	
	public void higher() {
		if (getCurrentGuess() == lastGuess)
		{
			throw new IndexOutOfBoundsException("This index you provided is beyond the bounds of the array.");
		}
		
		low = getCurrentGuess() + 1;
	}
	
	public void lower() {
		if (getCurrentGuess() == lastGuess)
		{
			throw new IndexOutOfBoundsException("This index you provided is beyond the bounds of the array.");
		}
			
		high = getCurrentGuess() - 1;
	}
	
	public void reset() {
		low = originalLow;
		high = originalHigh;
	}
}