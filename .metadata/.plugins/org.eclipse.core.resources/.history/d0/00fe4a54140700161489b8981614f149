import java.util.Random;

public class RandomNumberGuesser extends NumberGuesser 
{
	int randomGuess = 0;
	Random rand = new Random();
	
	public RandomNumberGuesser()
	{
		lower = 1;
		upper = 100;
	}
	
	public RandomNumberGuesser(int lowerBound, int upperBound)
	{
		lower = lowerBound;
		upper = upperBound;
	}
	
	@Override
	public int getCurrentGuess(NumberGuesser guess)
	{
		return randomGuess = rand.nextInt(guess.upper) + guess.lower;
	}
	
//	public void setLower(int up)
//	{
//		super.setLower(upper);
//	}
//	
//	public void setHigher(int low)
//	{
//		super.setHigher(lower);
//	}
}
