
public class NumberGuesser {
	
	protected int high;
	protected int low;
	
	private int originalHigh;
	private int originalLow;
	
	private int previousGuess;
	private int numGuesses;
	
	public NumberGuesser(int l, int h) {
		low = originalLow = l;
		high = originalHigh = h;
	}
	
	public int getCurrentGuess() {	
		return (high + low) / 2;
	}
	
	public void higher() {
		if (low >= high)
		{
			throw new IllegalStateException("I think you may have made and error -  " + previousGuess + "!");
		}
		
		low = getCurrentGuess() + 1;
	}
	
	public void lower() {
		if (high <= low)
		{
			throw new IllegalStateException("HUMAN INTERFACE ERROR - the only value available is " + previousGuess + "!");
		}
			
		high = getCurrentGuess() - 1;
		previousGuess = high;
	}
	
	public void reset() {
		low = originalLow;
		high = originalHigh;
	}
}